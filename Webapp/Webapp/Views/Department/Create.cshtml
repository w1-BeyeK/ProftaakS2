@model Webapp.Models.DepartmentDetailViewModel

@{
    ViewData["Title"] = "Creëer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aanmaken</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstitutionId" class="control-label">Institutie</label>
                @Html.DropDownListFor(model => model.InstitutionId,
                    Model.Institutions,
                    new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input asp-controller="Department" asp-action="Create" type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>

