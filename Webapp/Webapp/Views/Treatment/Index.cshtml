@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Treatment</h2>

@if (User.IsInRole("doctor"))
{
    <p>
        <a asp-action="create">Create New</a>
    </p>
}
    <div class="hidden" id="asdfgh">
        <table class="table table-striped table-hover" id="treatmentTable" style="width:100%;">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Naam</th>
                    <th>StartDatum</th>
                    <th>EindDatum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    int i = 0;
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.Name</td>
                        <td>@item.BeginDate</td>
                        <td>@item.EndDate</td>
                        <td>
                            @if (User.IsInRole("doctor"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            }
                            @Html.ActionLink("Detail", "Treatment", "Patient", new { id = item.PatientId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        @section Scripts {
            <script>
                $("document").ready(function () {
                    initDataTable();
                    $("#asdfgh").removeClass("hidden");
                });

                function initDataTable() {
                    $("#treatmentTable").DataTable({

                    });
                }
            </script>
        }
