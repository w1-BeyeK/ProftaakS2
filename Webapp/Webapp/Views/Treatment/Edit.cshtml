@model Webapp.Models.TreatmentDetailViewModel
@{
    ViewData["Title"] = "Behandeling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor</h2>

<link rel="stylesheet" href="~/css/User.css" />
<div class="container bootstrap snippet col-lg-offset-0" id="container">
    <div class="row">
        <div class="col-sm-10"><h1>Pas de behandeling aan</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <label for="name"><h4>Patiënt</h4></label>
                                <input type="text" class="form-control" asp-for="PatientDetailViewModel.Name" value="@Model.PatientDetailViewModel.Name" title="//Naam van de patiënt//">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="Age"><h4>Behandelingsnaam</h4></label>
                                <input type="text" class="form-control" asp-for="Name" value="@Model.Name" title="Naam van de behandeling.">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="nameTreatment"><h4>Behandelingstype</h4></label>
                                <select type="text" class="form-control" asp-for="Type" value="@Model.Type" title="Type van de behandeling.">
                                    <option>Behandeling 1</option>
                                    <option>Behandeling 2</option>
                                    <option>Behandeling 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="Begindate"><h4>Begindatum</h4></label>
                                <input type="date" class="form-control" asp-for="BeginDate" value="@Model.BeginDate.ToString("yyyy-MM-dd")" title="Begindatum behandeling">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="BeginTime"><h4>Tijd</h4></label>
                                <input type="time" class="form-control" asp-for="BeginTime" value="@Model.BeginDate.ToShortTimeString()" title="Begintijd behandeling">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="Enddate"><h4>Einddatum</h4></label>
                                <input type="date" class="form-control" asp-for="EndDate" placeholder="@Model.EndDate.ToString("yyyy-MM-dd")" title="Einddatum behandeling">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="EndTime"><h4>Tijd</h4></label>
                                <input type="time" class="form-control" asp-for="EndTime" value="@Model.EndDate.ToShortTimeString()" title="Eindtijd behandeling">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <label for="Comments"><h4>Bericht</h4></label>
                                <input type="text" class="form-control" asp-for="Description" value="@Model.Description" title="Bericht.">
                                <br />
                                <br />
                                <button type="submit" class="btn btn-primary" asp-action="Index" formmethod="post">Pas Aan</button>
                            </div>
                        </div>
                    </form>
                    <hr>
                </div><!--/tab-pane-->
            </div><!--/tab-content-->
        </div><!--/col-9-->
    </div><!--/row-->
