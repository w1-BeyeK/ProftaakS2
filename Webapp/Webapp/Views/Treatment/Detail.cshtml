@using Webapp.Models.Data;
@model Webapp.Models.TreatmentDetailViewModel
@{
    ViewData["Title"] = "Behandeling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor</h2>

<link rel="stylesheet" href="~/css/User.css" />
<div class="container bootstrap snippet col-lg-offset-0" id="container">
    <div class="row">
        <div class="col-sm-10"><h1>Details van de behandeling</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <label for="PatientName"><h4>Patiënt</h4></label>
                                @*<label type="text" title="Naam van de patiënt">@Model.PatientDetailViewModel.Name</label>*@
                                <input type="text" class="form-control" value="@Model.PatientDetailViewModel.Name" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="TreatmentName"><h4>Behandelingsnaam</h4></label>
                                @*<label type="text" title="Naam van de behandeling">@Model.Name</label>*@
                                <input type="text" class="form-control" value="@Model.Name" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="TreatmentType"><h4>Behandelingstype</h4></label>
                                @*<label type="text" title="Type van de behandeling">@Model.Type</label>*@
                                <input type="text" class="form-control" value="@Model.Type" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="Begindate"><h4>Begindatum</h4></label>
                                @*<label type="text" title="Begindatum behandeling">@Model.BeginDate.ToString("yyyy-MM-dd")</label>*@
                                <input type="text" class="form-control" value="@Model.BeginDate.ToString("yyyy-MM-dd")" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="BeginTime"><h4>Tijd</h4></label>
                                @*<label type="text" title="Begintijd behandeling">@Model.BeginDate.ToShortTimeString()</label>*@
                                <input type="text" class="form-control" value="@Model.BeginDate.ToShortTimeString()" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="Enddate"><h4>Einddatum</h4></label>
                                @*<label type="text" title="Einddatum behandeling">@Model.EndDate.ToString("yyyy-MM-dd")</label>*@
                                <input type="text" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <label for="EndTime"><h4>Tijd</h4></label>
                                @*<label type="text" title="Eindtijd behandeling">@Model.EndDate.ToShortTimeString()</label>*@
                                <input type="text" class="form-control" value="@Model.EndDate.ToShortTimeString()" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <label for="Description"><h4>Omschrijving</h4></label>
                                <input type="text" class="form-control" name="description" id="description" placeholder="Omschrijving" title="Omschrijving." value="@Model.Description.Description">
                            </div>
                        </div>
                        @foreach (Comment comment in Model.Comments)
                        {
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label for="Comments"><h4>Commentaar</h4></label>
                                    <input type="text" class="form-control" name="comments" id="comments" placeholder="Commentaar" title="Commentaar." value="@comment.Description">
                                </div>
                            </div>
                        }
                        @*<div class="form-group">
                            <div class="col-xs-12">
                                <label for="Comments"><h4>Bericht</h4></label>
                                <label type="text" title="Opmerking behandeling">@Model.Comment</label>
                                <input type="text" class="form-control" value="@Model.Description.Description" readonly="readonly">
                            </div>
                        </div>*@
                        <br />
                        <br />
                        <button class="btn btn-primary" asp-action="Index" formmethod="post">Ga terug</button>
                    </form>
                    <hr>
                </div><!--/tab-pane-->
            </div><!--/tab-content-->
        </div><!--/col-9-->
    </div><!--/row-->
